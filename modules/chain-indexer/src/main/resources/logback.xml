<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="com.datastax.oss.driver" level= "INFO"/>
    <logger name="com.datastax.oss.driver.internal.core.type.codec" level= "INFO"/>
</configuration>